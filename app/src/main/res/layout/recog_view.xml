<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

	<LinearLayout
		android:id="@+id/recog_bottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="#ff778899"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bt_floor"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_marginTop="2.0dp"
			android:layout_marginLeft="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="-" />

		<Button
			android:id="@+id/bt_wall"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="#" />

		<Button
			android:id="@+id/bt_box"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="$" />

		<Button
			android:id="@+id/bt_boxgoal"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="*" />

		<Button
			android:id="@+id/bt_goal"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="." />

		<Button
			android:id="@+id/bt_player"
			android:layout_width="29dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="\@" />

		<TextView
			android:layout_width="8dp"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:gravity="center"/>

		<Button
			android:id="@+id/bt_left"
			android:layout_width="35dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="←" />

		<Button
			android:id="@+id/bt_right"
			android:layout_width="35dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="→" />

		<Button
			android:id="@+id/bt_up"
			android:layout_width="35dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="↑" />

		<Button
			android:id="@+id/bt_down"
			android:layout_width="35dp"
			android:layout_height="29dp"
			android:layout_margin="2.0dp"
			android:gravity="center"
			android:background="#ff334455"
			android:textSize="14sp"
			android:text="↓" />

	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_above="@id/recog_bottom"
		android:background="#FF000000">

		<my.boxman.myRecogViewMap
			android:layout_width="match_parent"
    		android:layout_height="match_parent"
		    android:id="@+id/myRecogMap" />

    </LinearLayout>

</RelativeLayout>